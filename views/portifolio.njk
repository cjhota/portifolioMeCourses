{% extends 'layout.njk' %}

{% block head %}

    <title>portifolio</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %} 

    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
                <div class="card__image-container {{ 'featured-wrapper' if item.featured }}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
                    {% if item.featured %} 
                        <div class="featured"><p>Featured</p></div>
                    {% endif %}
                </div>
                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card__info"> 
                    <p>{{item.duration}}</p>
                    <p class="card__price">{{item.price}}</p>
                </div>
            </div>
        {% endfor %}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a href="" class="close-modal">
                <!-- <i class="highlight_off">close</i> -->
                <span class="material-icons">
                    highlight_off
                </span>
            </a>

            <div class="modal-content">
                {# <iframe src="" frameborder="0"></iframe> #}
            </div>
        </div>
    </div>
    <script src="script.js"></script>

{% endblock %}